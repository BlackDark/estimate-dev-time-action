{
  "name": "estimate-dev-time-action",
  "version": "1.0.0",
  "description": "GitHub Action to estimate development time for PRs using AI",
  "main": "dist/index.js",
  "scripts": {
    "build": "pnpm run clean && tsx esbuild.config.ts",
    "buildnew": "pnpm run clean && tsx esbuild.config.ts",
    "package": "pnpm run build",
    "test": "jest",
    "test-build": "pnpm run build && jest test/",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts esbuild.config.ts test/**/*.js",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BlackDark/estimate-dev-time-action.git"
  },
  "keywords": [
    "github-action",
    "pr-estimation",
    "development-time",
    "ai"
  ],
  "author": "BlackDark",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "openai": "^5.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "jest": "^30.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  }
}
